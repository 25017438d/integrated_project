<%- include('layout', { user: null, body: `
<h2>Register</h2>
${ typeof error !== 'undefined' && error ? `<div class="alert alert-error">${ error }</div>` : '' }
${ typeof success !== 'undefined' && success ? `<div class="alert alert-success">${ success }</div>` : '' }
<form method="POST" action="/register">
  <input name="login_id" placeholder="Login ID (min 3 characters)" required />
  <input name="nickname" placeholder="Nickname" required />
  <input name="email" type="email" placeholder="Email" required />
  <input type="password" name="password" placeholder="Password (min 6 characters)" required />
  <button type="submit">Sign Up</button>
</form>
` }) %>